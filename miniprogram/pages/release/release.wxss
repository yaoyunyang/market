/*弹窗*/
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 500rpx;
  overflow: hidden;
  position: fixed;
  top: 40%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 10rpx;
}



.modal-content {
  padding: 40rpx 32rpx;
}

.modal_input {
  display: flex;
  background: #fff;
  border-radius: 4rpx;
  font-size: 28rpx;
  align-items: center;
  justify-content: center;
}
.price_style{
  width: 20%;
  height: 50rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  padding-top:30rpx;
}


.price_input {
  width: 180rpx;
