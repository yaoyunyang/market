.red_point{
  height: 25rpx;
  width: 25rpx;
  border-radius: 50%;
  background-color: red;
  position: fixed;
  bottom: 65rpx;
  left: 70%;
  z-index: 999
}
.show{
  height:120rpx;

}
.swiper{
  padding: 20rpx 30rpx 10rpx 30rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;

}
.swiper image{
  border-radius: 20rpx;
  height: 200rpx;
  width: 690rpx;
  
}

.header{
  margin-left:30rpx;
  font-size: 32rpx
}
.header text{
  font-size:24rpx;
}



.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin:10rpx 20rpx 10rpx 20rpx;
}
.content-item{
  height: 500rpx;
  width: 345rpx;
  background: ghostwhite;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
  box-shadow: 2px 2px 5px #5f5d5de3;
}
.contet-item-image{
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  height: 74%;
  width:100%;
  background-color: #afafaf69;
}

.content-middle{
  display: flex;
  flex-direction: row;
  justify-content: center;
  color: #309ef5;
  margin-top: 6rpx;
  position: relative;
}
.content-item-tab{
  font-size: 25rpx;
  height:42rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content:center;
  margin-left: 40rpx;
}
.new_logo{
  position: absolute;
  height:30rpx;
  width:45rpx;
  bottom: 45rpx;
  left:8rpx;
  font-size: 15rpx;
  background-color: #fa5601;
  border-radius: 10rpx;
  color:white;
  font-weight:bolder;
  display: flex;
  align-items: center;
  justify-content:center;
}
.goods_name{
  font-size: 20rpx;
  color:black;
  height:40rpx;
  display: flex;
  align-items: center;
  justify-content:center;
}

.content-item-user{
  display: flex;
  flex-direction: row;
  height: 50rpx;
  justify-content: space-between;
  align-items: center;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.user{
  display: flex;
  flex-direction: row;
  
}
.useravatar{
  border-radius: 50%;
  height: 50rpx;
  width: 50rpx;
}
.username{
  color: #ababab;
  font-size: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 144rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
}
.attention{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 98rpx;
}

.icon_fixed{
  position: relative;
  height:40rpx;
  width: 40rpx;
  background-size: cover;
}
.icon_selected{

  transform: scale(1.3,1.3)
}
.attention-icon{
  
  height:40rpx;
  width: 40rpx;
  
}

.attention-num{
  margin-left: 10rpx;
  color: #ababab;
  font-size: 20rpx;
}