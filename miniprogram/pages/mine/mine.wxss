  bottom: 65rpx;
  left: 70%;
  z-index: 999
}
.outter{
  padding: 20rpx;
}
.userinfo{
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-top: 30rpx;
  padding-bottom: 50rpx;
  border-bottom: 4rpx solid #edebec;

}
.userinfo-avatar{
  
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
 
  background-size: cover;

  border-radius: 50%
  
}
.userinfo-nickname{
  font-size: 30rpx;
  margin-left: 20rpx;
  width: 400rpx;
  height: 148rpx;
  display: flex;
  align-items: center;
  color: #3E3E3E;
}


.middle{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.text_mine{
  font-size:32rpx;
}
.release_collections{
  margin:20rpx;
  font-size: 34rpx;
  color:#898586;
}
.showborder{
   border-bottom: 2px solid #f33849;
}
.space{
  width:100rpx;
  height:80rpx;
}




.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin:10rpx 0rpx 10rpx 0rpx;
}
.content-item{
  height: 500rpx;
  width: 345rpx;
  background: ghostwhite;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
  box-shadow: 2px 2px 5px #5f5d5de3;
}
.contet-item-image{
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  height: 74%;
  width: 100%;
  background-size: cover;
}

.content-middle{
  display: flex;
  flex-direction: row;
  justify-content: center;
  color: #309ef5;
  margin-top: 6rpx;
  position: relative;
}
.content-item-tab{
  font-size: 25rpx;
  height:42rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content:center;
  margin-left: 40rpx;
}
.new_logo{
  position: absolute;
  height:30rpx;
  width:45rpx;
  bottom: 45rpx;
  left:8rpx;
  font-size: 15rpx;
  background-color: #fa5601;
  border-radius: 10rpx;
  color:white;
  font-weight:bolder;
  display: flex;
  align-items: center;
  justify-content:center;
}
.goods_name{
  font-size: 20rpx;
  color:black;
  height:40rpx;
  display: flex;
  align-items: center;
  justify-content:center;
}

.content-item-user{
  display: flex;
  flex-direction: row;
  height: 50rpx;
  justify-content: space-between;
  align-items: center;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.user{
  display: flex;
  flex-direction: row;
  
}
.useravatar{
  border-radius: 50%;
  height: 50rpx;
  width: 50rpx;
}
.username{
  color: #ababab;
  font-size: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 144rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
}
.attention{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 98rpx;
}

.icon_fixed{
  position: relative;
  height:40rpx;
  width: 40rpx;
  background-size: cover;
}
.icon_selected{

  transform: scale(1.3,1.3)
}
.attention-icon{
  
  height:40rpx;
  width: 40rpx;
  
}

.attention-num{
  margin-left: 10rpx;
  color: #ababab;
  font-size: 20rpx;
}
.show{
  height:84rpx;
  background: #fff;
}